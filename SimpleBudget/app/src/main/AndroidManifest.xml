<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kvarnsen.simplebudget" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="kvarnsen.simplebudget.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddItemActivity"
            android:label="@string/title_activity_item" >
        </activity>
        <activity
            android:name="kvarnsen.simplebudget.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="kvarnsen.simplebudget.ui.BudgetDialogActivity"
            android:label="@string/title_activity_budget_dialog" >
        </activity>
    </application>

</manifest>
